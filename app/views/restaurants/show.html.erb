<div class="d-inline-flex p-4 justify-content-lg-between">
  <div class="flex-item p-4">
<h3><%= @restaurant.name %></h3>
<p> <%= @restaurant.address %></p>
<p> <%= @restaurant.phone_number%> </p>
<p> <%= @restaurant.category %></p>

<h4>Reviews</h4>
<% @restaurant.reviews.each do |review| %>
  <p><%= "#{review.content} - #{review.rating}*" %></p>
<% end %>
<%= link_to "Back to restaurants list", restaurants_path %>
</div>
<div class="flex-item p-4">
<h3>Add a review to <%= @restaurant.name %></h3>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: Review::RATINGS  %>
  <%= f.submit "Add a review", class: "btn btn-primary" %>
<% end %>
</div>
</div>
